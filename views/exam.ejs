<script>

    //data.Questions[0].question.value
    function getQcard(number) {
        console.log(data.Questions.length - 1)
        let card_content = '';
        let buttons = '';
        if (data.Questions[number].question.type === 'o4')
        {
            card_content = `<div class="card-block" style="padding: 2vh">
                <div class="card-title">
                    <label for="QuestionNumber" id="questionnumber">
                        <h3>Q${number+1}.</h3>
                    </label>
                    <label for="Question" id="questiontext">
                        <h4>${data.Questions[number].question.value}</h4>
                    </label>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col">
                            <div class="radio" style="padding:2vh" >
                                <label>
                                    <input type="radio" name="options${number}" id="${number}_option1" > ${data.Questions[number].question.options.A.value} </label>
                            </div>
                            <div class="radio" style="padding:2vh">
                                <label>
                                    <input type="radio" name="options${number}" id="${number}_option2" > ${data.Questions[number].question.options.B.value} </label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="radio" style="padding:2vh">
                                <label>
                                    <input type="radio" name="options${number}" id="${number}_option3"> ${data.Questions[number].question.options.C.value}</label>
                            </div>
                            <div class="radio" style="padding:2vh">
                                <label>
                                    <input type="radio" name="options${number}" id="${number}_option4"> ${data.Questions[number].question.options.D.value}</label>
                            </div>
                        </div>
                    </div>
                </div>
                `;
        }
        else if (data.Questions[number].question.type === 'o2')
        {
            card_content = `<div class="card-block" style="padding: 2vh">
                <div class="card-title">
                    <label for="QuestionNumber" id="questionnumber">
                        <h3>Q${number+1}.</h3>
                    </label>
                    <label for="Question" id="questiontext">
                        <h4>${data.Questions[number].question.value}</h4>
                    </label>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col">
                            <div class="radio" style="padding:2vh">
                                <label>
                                    <input type="radio"  name="options${number}" id="${number}_option1"> ${data.Questions[number].question.options.A.value} </label>
                            </div>
                            <div class="radio" style="padding:2vh">
                                <label>
                                    <input type="radio" name="options${number}" id="${number}_option2"> ${data.Questions[number].question.options.B.value} </label>
                            </div>
                        </div>
					</div>
				</div>
                `;

        }
        if(number === 0)
        {
            buttons = `<div class="container">
                <div class="row">
                    <div class="col">
                        <button id="prevquestion" value="Previous Question" class="btn btn-secondary" disabled>Previous Question</button>
                    </div>
                    <div class="col">
                        <button id="nextquestion" value="Next Question" class="btn btn-success" onclick="displayQuestion(${number + 1})">Next Question</button>
                    </div>
                </div>
            </div>
        </div>`;

        }
        else if (number === data.Questions.length - 1)
        {
            buttons = `<div class="container">
                <div class="row">
                    <div class="col">
                        <button id="prevquestion" value="Previous Question" class="btn btn-secondary"  onclick="displayQuestion(${number - 1})">Previous Question</button>
                    </div>
                    <div class="col">
                        <button id="nextquestion" value="Next Question" class="btn btn-success" onclick="displayQuestion(${number + 1})" disabled>Next Question</button>
                    </div>
                </div>
            </div>
        </div>`;
        }
        else
        {
            buttons = `<div class="container">
                <div class="row">
                    <div class="col">
                        <button id="prevquestion" value="Previous Question" class="btn btn-secondary"  onclick="displayQuestion(${number - 1})">Previous Question</button>
                    </div>
                    <div class="col">
                        <button id="nextquestion" value="Next Question" class="btn btn-success" onclick="displayQuestion(${number + 1})">Next Question</button>
                    </div>
                </div>
            </div>
        </div>`;
        }
        return card_content + buttons;
    }




</script>

